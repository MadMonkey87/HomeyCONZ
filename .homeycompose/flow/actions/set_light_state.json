{
  "id": "set_light_state",
  "title": {
    "en": "Set state"
  },
  "hint": {
    "en": "Apply one or more light commands that all will be applied natively which will get you a smoother expirience than doing so with separate commands."
  },
  "args": [
    {
      "name": "device",
      "type": "device",
      "filter": "driver_id=group|generic-lamp"
    },
    {
      "type": "dropdown",
      "name": "power",
      "title": {
        "en": "Power mode"
      },
      "values": [
        {
          "id": "none",
          "label": {
            "en": "Do not set"
          }
        },
        {
          "id": "on",
          "label": {
            "en": "Turn on"
          }
        },
        {
          "id": "off",
          "label": {
            "en": "Turn off"
          }
        }
      ]
    },
    {
      "type": "dropdown",
      "name": "brightness_mode",
      "title": {
        "en": "Brightness mode"
      },
      "values": [
        {
          "id": "none",
          "label": {
            "en": "Do not set"
          }
        },
        {
          "id": "absolute",
          "label": {
            "en": "absolute"
          }
        },
        {
          "id": "relative",
          "label": {
            "en": "relative"
          }
        }
      ]
    },
    {
      "type": "range",
      "name": "brightness",
      "hint": {
        "en": "applies only if the brightness mode is set to 'absolute'"
      },
      "title": {
        "en": "Absolute brightness"
      },
      "min": 0,
      "max": 1,
      "step": 0.005,
      "label": "%",
      "labelMultiplier": 100,
      "labelDecimals": 2
    },
    {
      "type": "range",
      "name": "relative_increasement_brightness",
      "hint": {
        "en": "applies only if the brightness mode is set to 'relative'"
      },
      "title": {
        "en": "Relative brightness"
      },
      "min": -1,
      "max": 1,
      "step": 0.01,
      "label": "%",
      "labelMultiplier": 100,
